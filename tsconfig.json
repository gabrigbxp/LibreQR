{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@types/*": ["types/*"],
            "@ui/*": ["src/ui/*"],
            "@utils/*": ["src/utils/*"]
        },
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "types/*.d.ts"]
}
