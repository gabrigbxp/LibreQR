{
    "name": "libreqr",
    "productName": "LibreQR",
    "version": "1.0.1",
    "description": "100% free QR code generator with no intermediaries, ads, or restrictions. Generate WiFi, contact cards, calendar events, URLs, and more. Open source, privacy-focused, and works offline.",
    "keywords": [
        "qr-code",
        "qr-generator",
        "free",
        "no-ads",
        "privacy",
        "offline",
        "wifi-qr",
        "vcard",
        "calendar",
        "contact-card",
        "url-shortener-alternative",
        "react",
        "electron",
        "pwa",
        "desktop",
        "web-app",
        "open-source",
        "no-intermediaries",
        "permanent-qr"
    ],
    "license": "MIT",
    "homepage": "https://github.com/gabrigbxp/LibreQR",
    "repository": {
        "type": "git",
        "url": "https://github.com/gabrigbxp/LibreQR.git"
    },
    "bugs": {
        "url": "https://github.com/gabrigbxp/LibreQR/issues"
    },
    "author": {
        "name": "Gabriel Gustavo Scocozza",
        "email": "scocozza.gabriel@gmail.com",
        "url": "https://github.com/gabrigbxp"
    },
    "main": ".webpack/main",
    "scripts": {
        "prestart": "ts-node env.ts",
        "start": "electron-forge start",
        "prepackage": "cross-env NODE_ENV=production ts-node env.ts",
        "package": "cross-env NODE_ENV=production electron-forge package",
        "premake": "cross-env NODE_ENV=production ts-node env.ts",
        "make": "cross-env NODE_ENV=production electron-forge make",
        "prepublish": "cross-env NODE_ENV=production ts-node env.ts",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts,.tsx .",
        "format": "prettier --write src/**/*.{ts,tsx,json}",
        "prepare": "husky",
        "postinstall": "node setupHusky.js",
        "preweb": "ts-node env.ts",
        "web": "webpack serve --config webpack.web.config.js --mode development",
        "preweb:build": "cross-env NODE_ENV=production ts-node env.ts",
        "web:build": "cross-env NODE_ENV=production webpack --config webpack.web.config.js --mode production",
        "web:preview": "npx serve dist-web"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
