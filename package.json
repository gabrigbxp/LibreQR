        "sass": "^1.94.2",
        "sass-loader": "^16.0.6",
        "serve": "^14.2.5",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5",
        "vite": "^5.4.21",
        "webpack": "^5.103.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.2"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
